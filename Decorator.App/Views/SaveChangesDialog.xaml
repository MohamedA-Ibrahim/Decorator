<ContentDialog
    x:Class="Decorator.App.Views.SaveChangesDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:Decorator.App.Views"
    Title="حفظ التغييرات?"
    Content="لديك بعد التغييرات الغير محفوظة. هل تريد أن تحفظها؟"
    PrimaryButtonText="حفظ"
    SecondaryButtonText="لا تحفظ"
    CloseButtonText="الغاء"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    CloseButtonClick="ContentDialog_CloseButtonClick"
    mc:Ignorable="d">
    
    <ContentDialog.Resources>
        <Style TargetType="local:SaveChangesDialog" BasedOn="{StaticResource DefaultContentDialogStyle}"/>
    </ContentDialog.Resources>
    
</ContentDialog>
